<resources>
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- Custom Rounded Checkbox -->
    <style name="RoundedCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_rounded_check</item>
        <item name="android:buttonTint">@color/white</item>
    </style>
    <!-- Custom Rounded Checkbox -->

    <!-- Generic Dialog -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowNoTitle">true</item>
        <item name="buttonBarButtonStyle">@style/GenericDialogButtonStyle</item>
    </style>

    <style name="GenericDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <!-- Generic Dialog -->
</resources>