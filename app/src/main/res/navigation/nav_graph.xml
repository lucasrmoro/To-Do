<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/customSplashFragment">

    <fragment
        android:id="@+id/customSplashFragment"
        android:name="br.com.lucas.todo.ui.customSplashScreen.CustomSplashFragment"
        android:label="CustomSplashFragment">
        <action
            android:id="@+id/fromSplashToListTask"
            app:destination="@id/listTaskFragment"
            app:popUpTo="@id/customSplashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/listTaskFragment"
        android:name="br.com.lucas.todo.ui.listTask.ListTaskFragment"
        android:label="fragment_list_task"
        tools:layout="@layout/fragment_list_task">
        <action
            android:id="@+id/fromListTaskToEditTask"
            app:destination="@id/editTaskFragment" />
        <action
            android:id="@+id/fromListTaskToInfoTask"
            app:destination="@id/infoTaskFragment" />
        <argument
            android:name="task"
            android:defaultValue="@null"
            app:argType="br.com.lucas.todo.database.Task"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/editTaskFragment"
        android:name="br.com.lucas.todo.ui.editTask.EditTaskFragment"
        android:label="EditTaskFragment">
        <action
            android:id="@+id/fromEditTaskToListTask"
            app:destination="@id/listTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/infoTaskFragment"
        android:name="br.com.lucas.todo.ui.infoTask.InfoTaskFragment"
        android:label="InfoTaskFragment">
        <action
            android:id="@+id/fromInfoTaskToListTask"
            app:destination="@id/listTaskFragment" />
    </fragment>

</navigation>